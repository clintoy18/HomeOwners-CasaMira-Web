@model HomeOwners_CasaMira_Web.Models.FacilityReservation

@{
    ViewData["Title"] = "Create Reservation";
    var facilities = ViewBag.AvailableFacilities as List<HomeOwners_CasaMira_Web.Models.Facility>;
}

<div class="container mt-5">
    <!-- White Background Wrapper -->
    <div class="bg-white p-5 rounded shadow">
        <!-- Title -->
        <h2 class="text-center fw-bold text-uppercase text-dark mb-4" style="font-size: 28px; letter-spacing: 0.1em;">
            Create Reservation
        </h2>

        <form asp-action="Create" method="post">
            <!-- Display Validation Errors -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }

            <div class="mb-4">
                <label for="FacilityId" class="form-label fw-bold">Select Facility</label>
                <select asp-for="FacilityId" class="form-control" id="FacilityId" required>
                    <option value="">-- Select a Facility --</option>
                    @foreach (var facility in facilities)
                    {
                        <option value="@facility.Id">@facility.Name</option>
                    }
                </select>
            </div>

            <div class="mb-4">
                <label asp-for="ReservationDate" class="form-label fw-bold">Reservation Date</label>
                <input asp-for="ReservationDate" class="form-control" type="date" required />
            </div>

            <div class="mb-4">
                <label asp-for="StartTime" class="form-label fw-bold">Start Time</label>
                <input asp-for="StartTime" class="form-control" type="time" required />
            </div>

            <div class="mb-4">
                <label asp-for="EndTime" class="form-label fw-bold">End Time</label>
                <input asp-for="EndTime" class="form-control" type="time" required />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg px-5">Submit</button>
            </div>
        </form>
    </div>
</div>
