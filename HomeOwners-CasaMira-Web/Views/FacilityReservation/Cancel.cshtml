@model HomeOwners_CasaMira_Web.Models.FacilityReservation

@{
    ViewData["Title"] = "Cancel Reservation";
}

<div class="container mt-5">
    <div class="bg-white p-4 rounded shadow">
        <h2 class="text-center fw-bold text-uppercase text-dark mb-4" style="font-size: 28px; letter-spacing: 0.1em;">
            Cancel Reservation
        </h2>

        <div class="alert alert-warning mb-4">
            <h4><i class="bi bi-exclamation-triangle me-2"></i>Are you sure you want to cancel this reservation?</h4>
            <p>This action cannot be undone.</p>
        </div>
        
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Reservation Details</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Facility:</dt>
                    <dd class="col-sm-9">@Model.Facility.Name</dd>
                    
                    <dt class="col-sm-3">Date:</dt>
                    <dd class="col-sm-9">@Model.ReservationDate.ToString("MM/dd/yyyy")</dd>
                    
                    <dt class="col-sm-3">Time:</dt>
                    <dd class="col-sm-9">@Model.StartTime.ToString(@"hh\:mm") to @Model.EndTime.ToString(@"hh\:mm")</dd>
                    
                    <dt class="col-sm-3">Status:</dt>
                    <dd class="col-sm-9">
                        <span class="badge @(Model.Status == "Approved" ? "bg-success" : "bg-warning")">
                            @Model.Status
                        </span>
                    </dd>
                </dl>
            </div>
        </div>
        
        <div class="d-flex justify-content-center gap-3">
            <form asp-action="Cancel" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Confirm Cancellation</button>
            </form>
            <a asp-action="MyReservations" class="btn btn-secondary">Back to My Reservations</a>
        </div>
    </div>
</div> 