@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - User Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/user.css" asp-append-version="true">
</head>
<body class="user-layout">
    <div class="d-flex">
        <!-- Include Sidebar Partial -->
        @await Html.PartialAsync("_LoginPartial")

        <!-- Main Content -->
        <div class="content flex-grow-1">
            <nav class="navbar navbar-expand-lg navbar-trans  px-4" style="background-color: transparent;">
                <!-- Navbar content here -->
         
                
                <div class="ms-auto">
                    <a class="btn text-white" asp-controller="Profile" asp-action="Edit">
                        <i class="bi bi-person"></i> Profile
                    </a>
                    <a class="btn text-white" asp-controller="Account" asp-action="Logout">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                </div>
            </nav>

            <div class="p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
