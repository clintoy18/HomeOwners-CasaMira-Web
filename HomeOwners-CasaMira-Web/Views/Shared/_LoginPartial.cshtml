@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Users> SignInManager;
@inject UserManager<Users> UserManager;

@if (SignInManager.IsSignedIn(User))
{
    <nav class="sidebar text-white vh-100 p-3" style="background-color: #947860;">
        <h3 class="text-center">Navigation</h3>
        <ul class="nav flex-column">
            @if (User.IsInRole("Admin"))
            {
                <!-- Admin Navigation -->
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Dashboard">
                        <i class="bi bi-speedometer2"></i> Admin Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="CreateAnnouncement">
                        <i class="bi bi-megaphone"></i> Create Announcements
                    </a>
                </li>
            }
            else
            {
                <!-- Regular User Navigation -->
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house"></i> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Announcement" asp-action="Announcement">
                        <i class="bi bi-megaphone"></i> View Announcements
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Ameneties">
                        <i class="bi bi-building"></i> Amenities
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Profile" asp-action="Edit">
                        <i class="bi bi-person-circle"></i> My Profile
                    </a>
                </li>
            }

            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Account" asp-action="Logout">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </li>
        </ul>
    </nav>
}
else
{
    <!-- Guest Navigation (If Not Logged In) -->
    <ul class="nav">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
        </li>
    </ul>
}
