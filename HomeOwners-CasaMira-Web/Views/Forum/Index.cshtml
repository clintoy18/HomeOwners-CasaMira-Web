@model IEnumerable<HomeOwners_CasaMira_Web.Models.ForumPost>
@{
    ViewData["Title"] = "Community Forum";
    Layout = "_UserLayout";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-4">Community Forum</h1>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Post
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No forum posts yet. Be the first to start a discussion!
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                @foreach (var post in Model)
                {
                    <div class="card mb-3 @(post.IsPinned ? "border-primary" : "")">
                        <div class="card-header d-flex justify-content-between align-items-center @(post.IsPinned ? "bg-primary text-white" : "")">
                            <div>
                                @if (post.IsPinned)
                                {
                                    <i class="bi bi-pin-angle-fill me-2"></i>
                                }
                                @if (post.IsLocked)
                                {
                                    <i class="bi bi-lock-fill me-2"></i>
                                }
                                <span class="fw-bold">@post.Title</span>
                            </div>
                            <div class="d-flex align-items-center">
                                @if (User.IsInRole("Admin"))
                                {
                                    <form asp-action="PinPost" asp-route-id="@post.Id" method="post" class="me-2">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm @(post.IsPinned ? "btn-light" : "btn-outline-primary")" title="@(post.IsPinned ? "Unpin" : "Pin") this post">
                                            <i class="bi bi-pin-angle@(post.IsPinned ? "-fill" : "")"></i>
                                        </button>
                                    </form>
                                    <form asp-action="LockPost" asp-route-id="@post.Id" method="post" class="me-2">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm @(post.IsLocked ? "btn-secondary" : "btn-outline-secondary")" title="@(post.IsLocked ? "Unlock" : "Lock") this post">
                                            <i class="bi bi-lock@(post.IsLocked ? "-fill" : "")"></i>
                                        </button>
                                    </form>
                                }
                                @if (User.IsInRole("Admin") || post.UserId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                                {
                                    <form asp-action="DeletePost" asp-route-id="@post.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this post?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <small class="text-muted">
                                    Posted by @post.User.FullName on @post.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                </small>
                                <span class="badge bg-secondary">@post.Comments.Count() comments</span>
                            </div>
                            <p class="card-text">@(post.Content.Length > 200 ? post.Content.Substring(0, 200) + "..." : post.Content)</p>
                            <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-sm btn-outline-primary">
                                Read More <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div> 