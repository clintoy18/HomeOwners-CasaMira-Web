    }
    .forum-header {
        color: var(--sidebar-brown-dark);
        font-weight: 700;
        margin-bottom: 2rem;
        text-align: center;
    }
    .forum-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 1px rgba(0,0,0,0.06);
        padding: 2rem 1.5rem;
        margin-bottom: 2rem;
        border: 1px solid var(--sidebar-brown-light);
    }
    .btn-brown, .btn-outline-brown {
        color: #fff;
        background-color: var(--sidebar-brown);
