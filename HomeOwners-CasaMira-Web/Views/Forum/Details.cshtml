@model HomeOwners_CasaMira_Web.Models.ForumPost
@{
    ViewData["Title"] = Model.Title;
    Layout = "_UserLayout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Forum</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>

            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center @(Model.IsPinned ? "bg-primary text-white" : "")">
                    <div>
                        @if (Model.IsPinned)
                        {
                            <i class="bi bi-pin-angle-fill me-2"></i>
                        }
                        @if (Model.IsLocked)
                        {
                            <i class="bi bi-lock-fill me-2"></i>
                        }
                        <h1 class="h3 mb-0">@Model.Title</h1>
                    </div>
                    <div class="d-flex align-items-center">
                        @if (User.IsInRole("Admin"))
                        {
                            <form asp-action="PinPost" asp-route-id="@Model.Id" method="post" class="me-2">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm @(Model.IsPinned ? "btn-light" : "btn-outline-primary")" title="@(Model.IsPinned ? "Unpin" : "Pin") this post">
                                    <i class="bi bi-pin-angle@(Model.IsPinned ? "-fill" : "")"></i>
                                </button>
                            </form>
                            <form asp-action="LockPost" asp-route-id="@Model.Id" method="post" class="me-2">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm @(Model.IsLocked ? "btn-secondary" : "btn-outline-secondary")" title="@(Model.IsLocked ? "Unlock" : "Lock") this post">
                                    <i class="bi bi-lock@(Model.IsLocked ? "-fill" : "")"></i>
                                </button>
                            </form>
                        }
                        @if (User.IsInRole("Admin") || Model.UserId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                        {
                            <form asp-action="DeletePost" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this post?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-person-circle fs-4 me-2"></i>
                            <div>
                                <div class="fw-bold">@Model.User.FullName</div>
                                <small class="text-muted">Posted on @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                            </div>
                        </div>
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <small class="text-muted">
                                Last updated: @Model.UpdatedAt.Value.ToString("MMM dd, yyyy HH:mm")
                            </small>
                        }
                    </div>
                    <div class="post-content mb-4">
                        @Model.Content
                    </div>
                </div>
            </div>

            <!-- Comments Section -->
            <div class="card">
                <div class="card-header">
                    <h2 class="h5 mb-0">Comments (@Model.Comments.Count())</h2>
                </div>
                <div class="card-body">
                    @if (!Model.IsLocked)
                    {
                        <form asp-action="AddComment" method="post" class="mb-4">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="postId" value="@Model.Id" />
                            <div class="mb-3">
                                <textarea name="content" class="form-control" rows="3" placeholder="Write your comment..." required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send"></i> Post Comment
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-4">
                            <i class="bi bi-lock-fill"></i> This post is locked. New comments are not allowed.
                        </div>
                    }

                    @if (!Model.Comments.Any())
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-chat-dots display-4"></i>
                            <p class="mt-2">No comments yet. Be the first to comment!</p>
                        </div>
                    }
                    else
                    {
                        <div class="comments-list">
                            @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
                            {
                                <div class="comment mb-3 pb-3 border-bottom">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-person-circle me-2"></i>
                                            <div>
                                                <div class="fw-bold">@comment.User.FullName</div>
                                                <small class="text-muted">@comment.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                                            </div>
                                        </div>
                                        @if (User.IsInRole("Admin") || comment.UserId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                                        {
                                            <form asp-action="DeleteComment" asp-route-id="@comment.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this comment?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                    <div class="comment-content">
                                        @comment.Content
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 