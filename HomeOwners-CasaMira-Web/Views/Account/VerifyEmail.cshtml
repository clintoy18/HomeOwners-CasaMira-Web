@using HomeOwners_CasaMira_Web.ViewModels
@model VerifyEmailViewModel;


@{
	ViewData["Title"] = "Login";
	Layout = "/Views/Shared/_AccountLayout.cshtml";

}
<div class="account-container">

	
	<div class="account-box">
		<h2 class="text-center pb-2">Verify Email</h2>
		<form asp-action="VerifyEmail" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="mb-3">
				<label asp-for="Email" class="form-label"></label>
				<input asp-for-"Email" class="form-control border" placeholder="Enter your email">
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
	
			<input type="submit" value="Login" class="btn btn-primary btn-primary w-100 p-2"/>
			<p class="ml-1 mt-2">Dont have an account?
				<a asp-controller="Account" asp-action="Register" class="text-decoration-none mt-3">Sign up</a>
			</p>
			<div class="text-center" >
				<a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3">Back</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {

	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
	}

}
