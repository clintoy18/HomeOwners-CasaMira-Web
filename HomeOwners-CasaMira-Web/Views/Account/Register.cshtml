@using HomeOwners_CasaMira_Web.ViewModels;
@model RegisterViewModel;
@{
	ViewData["Title"] = "Register";
	Layout = "/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
	<div class="layout">
		<h1 class="fs-3">CASA MIRA</h1>
		<p class="fs-5 text-center">Home Owner</p>
	</div>

	<div class="account-box">
		<h2 class="text-center pb-2">REGISTER</h2>
		<form asp-action="Login" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="row">
				<div class="col mb-3">
					<input asp-for="Name" class="form-control" placeholder="First Name">
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="col mb-3">
					<input asp-for="Name" class="form-control" placeholder="Last Name">
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
			</div>
			<div class="mb-3">
				<input asp-for="Email" type="email" class="form-control" placeholder="Email Address">
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<input asp-for="Email" type="email" class="form-control" placeholder="Address">
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<input asp-for="Password" type="Password" class="form-control" placeholder="Password">
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<input asp-for="Password" type="Password" class="form-control" placeholder="Confirm Password">
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			@* <div class="mb-3"> *@
			@* 	<label asp-for="ConfirmPassword" class="form-label"></label> *@
			@* 	<input asp-for="ConfirmPassword" type="Password" class="form-control" placeholder="ConfirmPassword"> *@
			@* 	<span asp-validation-for="ConfirmPassword" class="text-danger"></span> *@
			@* </div> *@
			<input type="submit" value="SIGN UP" class="btn btn-primary btn-primary w-100 p-2" />
			<p class="mt-2">
				Already have an account?
				<a asp-controller="Account" asp-action="Login" class="text-decoration-none mt-3">Login</a>
			</p>
			<div class="text-center">
				<a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3">Back</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {

	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
	}

}
