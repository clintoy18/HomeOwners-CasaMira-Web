@model HomeOwners_CasaMira_Web.Models.Facility

@{
    ViewData["Title"] = "Delete Facility";
}

<div class="container mt-5">
    <div class="bg-white p-5 rounded shadow">
        <h1 class="mb-4 text-danger text-center">
            <i class="bi bi-trash-fill me-2"></i> Delete Facility
        </h1>

        <p class="lead text-center">
            Are you sure you want to delete the facility <strong class="text-dark">@Model.Name</strong>?
        </p>

        <p class="text-center text-muted">
            This action cannot be undone. All associated data, including reservations, will be permanently deleted.
        </p>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <form method="post">
                <button type="submit" class="btn btn-danger btn-lg px-4">
                    <i class="bi bi-check-circle me-2"></i> Yes, Delete
                </button>
            </form>
            <a href="@Url.Action("Index", "Facility")" class="btn btn-secondary btn-lg px-4">
                <i class="bi bi-x-circle me-2"></i> Cancel
            </a>
        </div>
    </div>
</div>
