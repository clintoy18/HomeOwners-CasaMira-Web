@model IEnumerable<HomeOwners_CasaMira_Web.Models.Announcement>

@{
    ViewData["Title"] = "Announcement Page";
}

<div class="text-white">
    <p class="display-4 fs-1 text-center mb-0 lh-1">WELCOME TO</p>
    <h1 class="mb-0 lh-1" style="font-size: 8rem;">Announcements!</h1>

    <h2>Announcements</h2>


        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Content</td>
                            <td>@item.DatePosted.ToString("MMMM dd, yyyy")</td>
                        </tr>
            }
            </tbody>
        </table>
    }

</div>
