@{
    ViewData["Title"] = "Amenities Page";
}

<!-- Main Content Wrapper with Background -->
<div class="container-fluid py-5" style="background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('~/css/images/background.jpg') no-repeat center center; background-size: cover; min-height: 100vh;">
    <div class="container mt-5" style="background: rgba(255, 255, 255, 0.7); padding: 40px; border-radius: 10px;">
        <!-- Title -->
        <div class="text-center pb-5">
            <h1 class="fw-bold text-uppercase text-white"
                style="font-size: 32px; letter-spacing: 0.15em; margin-bottom: 60px;">
                Amenities
            </h1>
        </div>

        <!-- Amenities Grid -->
        <div class="container">
            <div class="row g-5 justify-content-center">
                @foreach (var amenity in new[] { "Pool", "Gym", "Playgrounds", "Environmental Friendly", "Basketball Courts", "Community Center" })
                {
                    // Map amenities to images
                    var amenityImage = amenity switch
                    {
                        "Pool" => Url.Content("~/css/images/swimmingpool.png"),
                        "Gym" => Url.Content("~/css/images/fitness.png"),
                        "Playgrounds" => Url.Content("~/css/images/playgrounds.png"),
                        "Environmental Friendly" => Url.Content("~/css/images/nature.png"),
                        "Basketball Courts" => Url.Content("~/css/images/sports.png"),
                        "Community Center" => Url.Content("~/css/images/communitycenter.png"),
                        _ => Url.Content("~/css/images/casamira.jpg")
                    };

                    <div class="col-12 col-md-6 col-lg-4 d-flex justify-content-center">
                        <div class="text-center position-relative" style="width: 250px; margin-bottom: 30px;">
                            <img src="@amenityImage"
                                 class="rounded-circle position-absolute start-50 translate-middle"
                                 style="top: -15px; width: 120px; height: 120px; object-fit: cover; border: 4px solid white; z-index: 10;">
                            <div class="rounded d-flex flex-column align-items-center justify-content-center position-relative"
                                 style="width: 250px; height: 180px; background: rgba(255, 255, 255, 0.85);
                                box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15); padding-top: 70px; z-index: 1;">
                                <p class="text-black fs-5 mb-0">@amenity</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
