@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h2 class="text-center mb-4 text-white"> Admin Dashboard</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="row">
        <!-- Left Column: Announcement Form -->
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h4 class="mb-3">Post Announcement</h4>

                <form asp-controller="Admin" asp-action="CreateAnnouncement" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label">Announcement Title</label>
                        <input type="text" class="form-control" name="Title" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Content</label>
                        <textarea class="form-control" name="Content" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100"> Post Announcement</button>
                </form>
            </div>
        </div>

        <!-- Right Column: User Statistics Chart -->
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h4 class="mb-3">📊 User Statistics</h4>
                <div style="height: 350px;">
                    <canvas id="userChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Reserved Facilities Report -->
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h4 class="mb-3">🏠 Reserved Facilities Report</h4>
                <div style="height: 350px;">
                    <canvas id="reservedFacilitiesChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Facilities Count Report -->
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h4 class="mb-3">📌 Facility Count</h4>
                <p class="fs-4">Total Facilities: <strong>@ViewBag.TotalFacilities</strong></p>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // User statistics
        const userData = {
            Homeowner: 120,
            Staff: 30
        };

        const ctxUser = document.getElementById("userChart").getContext("2d");
        new Chart(ctxUser, {
            type: "pie",
            data: {
                labels: Object.keys(userData),
                datasets: [{
                    data: Object.values(userData),
                    backgroundColor: ["#4CAF50", "#FFC107"]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: "bottom"
                    }
                }
            }
        });

        // Reserved Facilities Chart
        const reservedData = @Html.Raw(Json.Serialize(ViewBag.ReservedFacilities));
        const ctxReserved = document.getElementById("reservedFacilitiesChart").getContext("2d");

        new Chart(ctxReserved, {
            type: "bar",
            data: {
                labels: reservedData.map(x => x.FacilityName),
                datasets: [{
                    label: "Number of Reservations",
                    data: reservedData.map(x => x.ReservationCount),
                    backgroundColor: "#007BFF"
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>
