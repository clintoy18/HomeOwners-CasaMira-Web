@{
    ViewData["Title"] = "Announcement Page";
}

@model HomeOwners_CasaMira_Web.Models.Announcement

<h2 class="text-white">Create Announcement</h2>

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ViewBag.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form id="announcementForm" asp-action="CreateAnnouncement" asp-controller="Admin" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" id="titleInput" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" id="contentInput"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        if (@(ViewBag.SuccessMessage != null ? "true" : "false")) {
            document.getElementById("announcementForm").reset();
        }
    });
</script>
