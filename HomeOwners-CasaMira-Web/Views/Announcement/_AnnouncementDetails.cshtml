@model HomeOwners_CasaMira_Web.Models.Announcement

<div class="details-card" id="announcementDetails" style="display:flex;flex-direction:column;align-items:center;justify-content:center;">
    <h3 class="fw-bold text-center" style="font-size:2rem;margin-bottom:1.2rem;color:#3d2c18;">@Model.Title</h3>
    <p class="text-muted text-center" style="font-size:1.15rem;color:#5a4a36;margin-bottom:1.5rem;max-width:90%;">@Model.Content</p>
    <div class="posted-date text-center" style="display:inline-block;background:#f5eee6;color:#8a6f4d;border-radius:8px;padding:0.4rem 1rem;font-size:0.95rem;margin-top:0.5rem;">
        <i class="far fa-calendar-alt me-1"></i>
        Posted on: @Model.DatePosted.ToString("MMMM dd, yyyy")
    </div>
</div>
