@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_UserLayout";
}
@model List<HomeOwners_CasaMira_Web.Models.Announcement>

<h2 class="text-white">Announcements</h2>

<div class="card bg-light shadow-lg p-4" style="max-width: 800px; height: 400px; overflow-y: auto;">
    <div class="card-body">
        @if (Model.Any())
        {
            @foreach (var announcement in Model)
            {
                <div class="mb-4 p-3 border-bottom">
                    <h4 class="fw-bold">@announcement.Title</h4> <!-- Bold title -->
                    <p class="text-muted">@announcement.Content</p>
                    <small class="text-muted">Posted on: @announcement.DatePosted.ToString("MMMM dd, yyyy")</small>
                </div>
            }
        }
        else
        {
            <p class="text-muted">No announcements available.</p>
        }
    </div>
</div>
