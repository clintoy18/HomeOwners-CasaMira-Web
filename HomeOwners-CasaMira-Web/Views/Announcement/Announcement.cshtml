@{
    ViewData["Title"] = "Announcements";
    Layout = "_UserLayout";
}
@model List<HomeOwners_CasaMira_Web.Models.Announcement>

<style>
    /* Main Container */
    .announcements-container {
        position: relative;
        width: 100%;
        height: 85vh;
        display: flex;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        overflow: hidden;
        margin-left: 20px;
        margin-top: 30px;
    }

        .announcements-container::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(217, 217, 217, 0.3);
            z-index: -1;
            border-radius: 10px;
        }

    /* Left Column: List of Announcements */
    .announcements-list {
        width: 35%;
        height: 100%;
        padding: 30px;
        overflow-y: auto;
        background: #FFFFFF;
        border-right: 2px solid #ddd;
    }

    .announcement-item {
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        background: #F5F5F5;
        cursor: pointer;
        transition: background 0.2s ease;
    }

        .announcement-item:hover {
            background: #E0E0E0;
        }

    /* Right Column: Announcement Details */
    .announcement-details {
        width: 65%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .details-card {
        width: 100%;
        height: 100%;
        background: #FFFFFF;
        padding: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.15);
    }

    .announcement-title {
        font-weight: bold;
        font-size: 1.5rem;
    }

    .announcement-meta {
        color: gray;
        font-size: 0.9rem;
    }

    .message-box {
        background: #EAEAEA;
        padding: 15px;
        border-radius: 5px;
        margin-top: 10px;
    }

    /* Scrollbar Styling */
    .announcements-list::-webkit-scrollbar {
        width: 6px;
    }

    .announcements-list::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 5px;
    }

    .announcements-list::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 5px;
    }

        .announcements-list::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
</style>

<div class="announcements-container">
    <!-- Left Column: List of Announcements -->
    <div class="announcements-list">
        <h3 class="text-center">Upcoming Events</h3>
        @foreach (var announcement in Model)
        {
            <div class="announcement-item announcement-link" data-id="@announcement.Id">
                <strong>@announcement.Title</strong><br>
                <span class="announcement-meta">@announcement.DatePosted.ToString("MMMM d, yyyy")</span><br>
                <a href="#" class="text-primary small">View details →</a>
            </div>
        }
    </div>

    <!-- Right Column: Announcement Details -->
    <div class="announcement-details">
        <div class="details-card" id="announcementDetails">
            <p class="text-muted">Select an announcement to view details.</p>
        </div>
    </div>
</div>

<!-- AJAX Script to Load Details -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $(".announcement-link").click(function (e) {
            e.preventDefault();
            var announcementId = $(this).data("id");

            $.ajax({
                url: "/Announcement/Details/" + announcementId,
                type: "GET",
                success: function (data) {
                    $("#announcementDetails").html(data);
                },
                error: function () {
                    $("#announcementDetails").html("<p class='text-danger'>Error loading announcement details.</p>");
                }
            });
        });
    });
</script>
